<%= form_for @room do |f| %>
	
	<%if @room.errors.any? %>

	    <h2>Errors</h2>
	    <ul>
		    <% @room.errors.full_messages.each do |msg| %>
		        <li> <%=msg %> </li>
	        <% end %>
	    </ul>

	<% else %>	

	  <div class="field">
	    <%= f.label :name %><br>
	    <%= f.text_field :name %>
	  </div>

	  <div class="field">
	    <%= f.label :description %><br>
	    <%= f.text_area :description %>
	  </div>
	 
	  <div class="field">
	    <%= f.label :price %><br>
	    <%= f.text_field :price %>
	  </div>
	  
	  <div class="field">
	    <%= f.label :rules %><br>
	    <%= f.text_area :rules %>
	  </div>
	  
	  <div class="field">
	    <%= f.label :minimum_days %><br>
	    <%= f.text_field :minimum_days %>
	  </div>

	  <div class="field">
	    <%= f.label :address %><br>
	    <%= f.text_field :address %>
	  </div>
	  
	  <div class="field">
	    <%= f.label :latitude %><br>
	    <%= f.text_field :latitude %>
	  </div>
	 
	  <div class="field">
	    <%= f.label :longitude %><br>
	    <%= f.text_field :longitude %>
	  </div>
	  
	  <div class="field">
		<%= f.label :city %>
		<%= f.collection_select :city_id, City.all, :id, :name, prompt: "select city" %> <br/>
	  </div>
      
      <div class="field">
		<%= f.label :Owner %>
		<%= f.collection_select :user_id, User.all, :id, :username, prompt: "select name" %> <br/>
	  </div>

	  <div class="field">
	    <%=  f.label :is_authorized %>
	    <%= f.radio_button :is_authorized, true, :checked => "false" %> 
	  </div>

	  <div class="actions">
	    <%= f.submit %>
	  </div>

	<% end %>

<% end %>