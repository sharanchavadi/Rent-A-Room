<h2> Room details </h2>
<p>
  <strong>Image:</strong>
   <% @room.images.each do |image| %> 
     <%= image_tag image.image.url %>
   <% end %>
</p>

<p>
  <strong>Name:</strong>
  <%= @room.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @room.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= @room.price %>
</p>

<p>
  <strong>Rules:</strong>
  <%= @room.rules %>
</p>
<p>
  <strong>Minimum_days:</strong>
  <%= @room.minimum_days %>
</p>
<p>
  <strong>Address:</strong>
  <%= @room.address %>
</p>
<p>
  <strong>Latitude:</strong>
  <%= @room.latitude %>
</p>
<p>
  <strong>Longitude:</strong>
  <%= @room.longitude %>
</p>
<p>
  <strong>City:</strong>
  <%= @room.city.name %>
</p>
<p>
  <strong>Owner:</strong>
  <%= @room.user.username %>
</p>
<p>
  <strong>Is Verified:</strong>
  <%= @room.is_verified %>
</p>

<% if @room.user_id == current_user.id %>
  <%= link_to 'Edit', edit_room_path(@room) %> |
<% end %>

<%= link_to 'Back', rooms_path %>
<br/>

<iframe
  width="450"
  height="250"
  frameborder="0" style="border:0"
  src="https://www.google.com/maps/embed/v1/search?key=AIzaSyA6xPb8IP7BCyZXk5tDiuc8GbYyDbOfjkk&q=<%= @room.latitude %>,<%= @room.longitude %>" allowfullscreen>
</iframe>


