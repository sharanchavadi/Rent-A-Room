<h2>Unauthorized Rooms</h2>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Price</th>
        <th>Rules</th>
        <th>Minimum Days</th>
        <th>Address</th>
        <th>Latitude</th>
        <th>Longitude</th>
        <th>City</th>
        <th>Owner</th>
        <th>Is Verified<th>
      </tr>
    </thead>
    <tbody>
      <% @rooms.each do |room| %>
        
        <tr>
          <td><%= link_to room.name, room %></td>
          <td><%= room.description %></td>
          <td><%= room.price %></td>
          <td><%= room.rules %></td>
          <td><%= room.minimum_days %></td>
          <td><%= room.address %></td>
          <td><%= room.latitude %></td>
          <td><%= room.longitude %></td>
          <td><%= room.city.name %></td>
          <td><%= room.user.username %></td>
          <td><%= room.is_verified %></td>

          <td>
            <%= form_for room do |f| %>

                <%= f.hidden_field :is_verified, value: true %> 

                <%= f.submit "Authorize" %>

            <% end %> 
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<br/>

<%= link_to 'Back', rooms_path %>
